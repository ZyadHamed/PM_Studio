<Page x:Class="PM_Studio.SheduleManger"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PM_Studio"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SheduleManger">

    <Grid>
        <TreeView ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="#2D2D30" Margin="20,0,0,0">
            
            <TreeViewItem Header="Undone" x:Name="tviUndone" Foreground="#D2D2D2">
                <TreeViewItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </TreeViewItem.ItemsPanel>
                
            </TreeViewItem>

            <TreeViewItem Header="In Progress" x:Name="tviInProgress" Foreground="#D2D2D2">
                <TreeViewItem.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </TreeViewItem.ItemsPanel>
                </TreeViewItem>

            <TreeViewItem Header="Done" x:Name="tviDone" Foreground="#D2D2D2">
                <TreeViewItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </TreeViewItem.ItemsPanel>
            </TreeViewItem>
        </TreeView>
        
        
    </Grid>
</Page>
